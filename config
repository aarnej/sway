    xkb_layout us
    repeat_delay 200
    repeat_rate 30
    xkb_options "compose:sclk"
}

input 2:10:TPPS/2_Elan_TrackPoint {
    # accel_profile "flat"
    pointer_accel -0.3
    scroll_factor 0.2
}

set $lock swaylock
exec swayidle -w \
    timeout 600 $lock \
    timeout 570 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep $lock

